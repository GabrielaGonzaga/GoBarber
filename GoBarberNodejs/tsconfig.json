{
  "compilerOptions": {
    "target": "es2017",                                 
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",  
    "baseUrl": "./src",                                
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },                                     
    "outDir": "./dist",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                    
    "strictNullChecks": false,                          
    "strictPropertyInitialization": false,               
    "useUnknownInCatchVariables": false,                 
    "skipLibCheck": true                                 
  }
}
